
exec rm -rf var/libcache/cbe

build {
	core init timer
	server/ram_block
	server/cbe
	server/cbe_block
	app/block_tester
}

create_boot_directory

install_config {
<config>
	<parent-provides>
		<service name="ROM"/>
		<service name="RAM"/>
		<service name="IRQ"/>
		<service name="IO_MEM"/>
		<service name="IO_PORT"/>
		<service name="PD"/>
		<service name="RM"/>
		<service name="CPU"/>
		<service name="LOG"/>
	</parent-provides>

	<default-route>
		<any-service> <parent/> <any-child/> </any-service>
	</default-route>

	<default caps="100"/>
	<start name="timer">
		<resource name="RAM" quantum="1M"/>
		<provides><service name="Timer"/></provides>
	</start>

	<start name="cbe_block">
		<resource name="RAM" quantum="1G"/>
		<provides><service name="Block"/></provides>
		<config verbose="yes" backing_size="512M" vbd_size="64K" outer_degree="4" initialize="yes"/>
		<route>
			<any-service> <parent/> </any-service>
		</route>
	</start>

	<start name="cbe">
		<resource name="RAM" quantum="4M"/>
		<provides><service name="Block"/></provides>
		<config show_progress="no"/>
		<route>
			<service name="Block"> <child name="cbe_block"/> </service>
			<any-service> <parent/> </any-service>
		</route>
	</start>

	<start name="block_tester">
		<resource name="RAM" quantum="32M"/>
		<config verbose="yes" report="no" log="yes" stop_on_error="no">
			<tests>
				<replay verbose="yes" bulk="no"> <request type="read" lba="0" count="8"/> </replay>
				<replay verbose="yes" bulk="no"> <request type="write" lba="0" count="8"/> </replay>
				<replay verbose="yes" bulk="no"> <request type="read" lba="0" count="8"/> </replay>

				<replay verbose="yes" bulk="no"> <request type="read" lba="12" count="1"/> </replay>
				<replay verbose="yes" bulk="no"> <request type="write" lba="12" count="1"/> </replay>
				<replay verbose="yes" bulk="no"> <request type="read" lba="12" count="1"/> </replay>
<!--
				<sequential length="1M" size="4K" synchronous="yes"/>
				<sequential length="1M" size="8K" synchronous="yes"/>
				<sequential length="1M" size="16K"/>
				<sequential length="1M" size="64K"/>
				<sequential length="1M" size="128K"/>
				<sequential length="1M" size="4K" synchronous="yes" write="yes"/>
				<sequential length="1M" size="64K" write="yes" synchronous="yes"/>
-->
			</tests>
		</config>
		<route>
			<service name="Block"> <child name="cbe"/> </service>
			<any-service> <parent/> <any-child/> </any-service>
		</route>
	</start>
</config>}


build_boot_image {
	core init timer ram_block block_tester cbe_block cbe
	ld.lib.so spark.lib.so libsparkcrypto.lib.so
}


append qemu_args " -nographic -m 1280 "

run_genode_until {.*child "block_tester" exited with exit value 1.*\n} 60
